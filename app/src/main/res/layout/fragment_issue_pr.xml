<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.IssuePrFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:clickable="true"
        android:onClick="goToIssue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:background="@drawable/styling_commit"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/imageIP"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GHname/GHREPOname #4"
                android:textSize="@dimen/small_text_size"
                android:id="@+id/ghnameIP"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Better name"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/secondaryTextColor"
                android:id="@+id/contentIP"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>