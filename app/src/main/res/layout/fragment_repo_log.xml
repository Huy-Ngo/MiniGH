<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".fragments.RepoLogFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:src="@drawable/fork"
            android:layout_gravity="center"/>
        <Spinner
            android:id="@+id/branchSpinner"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/fab_margin"
            android:background="@drawable/stylingspinner"
            android:popupBackground="@color/secondaryColor"
            android:entries="@array/branchDropdown" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/commitContent"
        android:layout_marginTop="@dimen/fab_margin"
        android:paddingHorizontal="@dimen/fab_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
